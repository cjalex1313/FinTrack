{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/FinTrack.Api/FinTrack.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/FinTrack.Api/FinTrack.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/FinTrack.Api/FinTrack.Api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "docker-compose-up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "${workspaceFolder}/compose.yaml", "up", "--build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "${workspaceFolder}/compose.yaml", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "start-dependencies-and-build",
      "dependsOrder": "sequence",
      "dependsOn": ["docker-compose-up-dependencies", "build"]
    },
    {
      "label": "docker-compose-up-dependencies",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "-f",
        "${workspaceFolder}/compose.yaml",
        "up",
        "-d",
        "db",
        "fintrack.web"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-debug-up",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "-f",
        "${workspaceFolder}/compose.debug.yaml",
        "up",
        "--build",
        "-d"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose-debug-down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["-f", "${workspaceFolder}/compose.debug.yaml", "down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "get-container-name",
      "type": "shell",
      "command": "docker",
      "args": ["ps", "--filter", "name=fintrack.api", "--format", "{{.Names}}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
