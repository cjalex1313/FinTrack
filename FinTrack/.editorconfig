# Top-most EditorConfig file
root = true

# Apply to all C# files
[*.cs]

#############################
# Formatting preferences
#############################

# Use spaces, 4-wide indentation
indent_style = space
indent_size = 4

# Newline settings
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# Encoding
charset = utf-8

#############################
# Usings
#############################

# Place 'System.*' namespaces first
dotnet_sort_system_directives_first = false

# Separate groups of using directives
dotnet_separate_import_directive_groups = false

#############################
# Language rules
#############################

# var usage
# Use explicit type for built-in types (int, string, etc.)
csharp_style_var_for_built_in_types = false:suggestion

# Use explicit type when the type is apparent (e.g., new Person())
csharp_style_var_when_type_is_apparent = false:suggestion

# Use explicit type elsewhere (default)
csharp_style_var_elsewhere = false:suggestion

# this. qualification
dotnet_style_qualification_for_field = false:suggestion
dotnet_style_qualification_for_property = false:suggestion
dotnet_style_qualification_for_method = false:suggestion
dotnet_style_qualification_for_event = false:suggestion

# Explicit vs predefined types
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion

#############################
# Expression-level
#############################

# Prefer expression-bodied members
csharp_style_expression_bodied_methods = false:none
csharp_style_expression_bodied_properties = true:suggestion
csharp_style_expression_bodied_indexers = true:suggestion

# Pattern matching & null checks
csharp_style_pattern_matching_over_is_with_cast_check = true:suggestion
csharp_style_pattern_matching_over_as_with_null_check = true:suggestion
csharp_style_prefer_null_check_over_type_check = true:suggestion

#############################
# Modern C# syntax preferences
#############################

# Prefer using '??=' for null-coalescing assignment
csharp_style_prefer_null_coalescing_assignment = true:suggestion

# Prefer using '??' and '?:' instead of if/else
csharp_style_prefer_conditional_expression_over_assignment = true:suggestion
csharp_style_prefer_conditional_expression_over_return = true:suggestion

# Prefer interpolated strings
csharp_style_prefer_interpolated_string = true:suggestion
csharp_style_prefer_range_operator = true:suggestion
csharp_style_prefer_index_operator = true:suggestion

#############################
# Code cleanup
#############################

# Remove unused usings
dotnet_remove_unnecessary_usings = true

# Sort usings
dotnet_sort_system_directives_first = false

